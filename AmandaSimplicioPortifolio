    <script>
        // Set current year
        document.getElementById('currentYear').textContent = new Date().getFullYear();

        // Tab functionality
        const tabTriggers = document.querySelectorAll('.tab-trigger');
        const tabContents = document.querySelectorAll('.tab-content');

        tabTriggers.forEach(trigger => {
            trigger.addEventListener('click', () => {
                const targetTab = trigger.getAttribute('data-tab');
                
                // Remove active class from all triggers and contents
                tabTriggers.forEach(t => t.classList.remove('active'));
                tabContents.forEach(c => c.classList.remove('active'));
                
                // Add active class to clicked trigger and corresponding content
                trigger.classList.add('active');
                document.getElementById(targetTab).classList.add('active');
            });
        });

        // Dark mode toggle
        let darkMode = false;
        
        function toggleDarkMode() {
            darkMode = !darkMode;
            const body = document.body;
            const darkModeSwitch = document.getElementById('darkModeSwitch');
            
            if (darkMode) {
                body.classList.add('dark');
                darkModeSwitch.classList.add('active');
                showToast('Modo escuro ativado');
            } else {
                body.classList.remove('dark');
                darkModeSwitch.classList.remove('active');
                showToast('Modo claro ativado');
            }
        }

        // Toast notification
        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.classList.add('show');
            
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // PDF download
        function downloadPDF() {
            showToast('Download iniciado! O currículo está sendo gerado em PDF...');
            
            // Simulate PDF generation
            setTimeout(() => {
                const link = document.createElement('a');
                link.href = 'data:application/pdf;base64,JVBERi0xLjQKJcOkw7zDtsOmCjIgMCBvYmoKPDwKL1R5cGUgL0NhdGFsb2cKL1BhZ2VzIDEgMCBSCj4+CmVuZG9iago=';
                link.download = 'Amanda_Simplicio_Curriculo.pdf';
                link.click();
            }, 2000);
        }

        // Share portfolio
        function sharePortfolio() {
            if (navigator.share) {
                navigator.share({
                    title: 'Portfólio - Amanda Simplício da Silva',
                    text: 'Confira o portfólio da Amanda Simplício da Silva',
                    url: window.location.href
                });
            } else {
                navigator.clipboard.writeText(window.location.href);
                showToast('Link copiado! O link do portfólio foi copiado para a área de transferência');
            }
        }

        // View counter simulation
        let viewCount = 1247;
        
        function updateViewCount() {
            viewCount += Math.floor(Math.random() * 3);
            document.getElementById('viewCount').textContent = viewCount.toLocaleString() + ' visualizações';
            document.getElementById('statViews').textContent = viewCount.toLocaleString();
        }

        // Update view count every 30 seconds
        setInterval(updateViewCount, 30000);

        // Add fade-in animation to elements as they come into view
        function observeElements() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('fade-in');
                    }
                });
            });

            document.querySelectorAll('.card').forEach(card => {
                observer.observe(card);
            });
        }

        // Initialize animations
        document.addEventListener('DOMContentLoaded', observeElements);

        // Simulate progress bar animations
        function animateProgressBars() {
            const progressFills = document.querySelectorAll('.progress-fill');
            progressFills.forEach(fill => {
                const width = fill.style.width;
                fill.style.width = '0%';
                setTimeout(() => {
                    fill.style.width = width;
                }, 500);
            });
        }

        // Animate progress bars when projects tab is clicked
        document.querySelector('[data-tab="projects"]').addEventListener('click', () => {
            setTimeout(animateProgressBars, 100);
        });

        // Print functionality
        function printPortfolio() {
            window.print();
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            if (e.ctrlKey) {
                switch(e.key) {
                    case 'p':
                        e.preventDefault();
                        printPortfolio();
                        break;
                    case 'd':
                        e.preventDefault();
                        toggleDarkMode();
                        break;
                    case 's':
                        e.preventDefault();
                        sharePortfolio();
                        break;
                }
            }
        });

        // Add smooth scrolling
        document.documentElement.style.scrollBehavior = 'smooth';
    </script>
</body>
</html>
